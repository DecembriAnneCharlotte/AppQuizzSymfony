							<a href="{{ path('app_home') }}" class="btn btn-primary my-3">Retour</a>
						</div>
					</div>

				{% endfor %}
			{% endfor %}

		</div>

		<div class="col-md-4">
			<div class="card w-200">
				<h5 class="card-header">Les categories</h5>

				<div class="list-group">
					{% for categorie in categories %}
						<a href="#" class="list-group-item list-group-item-action disabled">{{ categorie.name}}</a>
					{% endfor %}


				</div>


			</div>
		</div>
	</div>


{% endblock %}
