{% block title %}Hello HomeController!
{% endblock %}

{% block body %}

	<h1>Liste des quizz</h1>


	<div class="row">
		<div class="col-md-8">
			Liste quizz

			{% for categorie in categories %}

				{% for quizz in categorie.quizzs %}


					<div class="card w-200">
						<h5 class="card-header">{{quizz.title}}</h5>
						<div class="card-body">
							<h5 class="card-title">DÃ©scription :</h5>
							<p class="card-text">{{quizz.description}}</p>
