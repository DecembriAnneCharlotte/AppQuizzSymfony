            <div id="global-loader">
                <img src="{{absolute_url(asset('build/images/loader.svg'))}}" class="loader-img" alt="Loader">
            </div>
            <!-- /GLOABAL LOADER -->

            <!-- PAGE -->
            <div class="page">
                <div class="">  

                    <!-- CONTENT -->
                    {% block body %}
                    {% endblock %}
                    <!-- CONTENT CLOSED-->   

                </div>
            </div>
            <!-- END PAGE -->
            
        </div>
        <!-- BACKGROUND-IMAGE CLOSED -->

        {% block javascripts %}
        {{ include('layouts/custom-scripts.html.twig') }}
        {% endblock %}

    </body>
</html>
